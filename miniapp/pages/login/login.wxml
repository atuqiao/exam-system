<view class="container">
  <view class="login-header">
    <image class="logo" src="/static/images/banner.png" mode="aspectFit"></image>
    <text class="title">资料管理小程序</text>
    <text class="subtitle">欢迎使用</text>
  </view>

  <view class="login-section">
    <view class="tips">
      <text class="tips-text">登录后可使用完整功能</text>
    </view>

    <button
      class="login-btn"
      bindtap="handleLogin"
      loading="{{loading}}"
    >
      微信一键登录
    </button>

    <view class="agreement">
      <text class="agreement-text">登录即表示同意</text>
      <text class="agreement-link" bindtap="goToAgreement">《用户协议》</text>
      <text class="agreement-text">和</text>
      <text class="agreement-link" bindtap="goToPrivacy">《隐私政策》</text>
    </view>
  </view>
</view>
