.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 筛选区域 */
.filter-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  flex: 0 1 auto;
  min-width: 150rpx;
}

.picker-content {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  padding: 6rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 10rpx;
  border: 2rpx solid #e8e8e8;
  min-height: 52rpx;
  transition: all 0.3s;
  position: relative;
  z-index: 10;
  min-width: 150rpx;
  width: auto;
  box-sizing: border-box;
}

.picker-content.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.picker-content.active .filter-value {
  color: white;
}

.picker-content.active .dropdown-arrow {
  color: white;
}

.filter-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.filter-value {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
}

.filter-value.selected {
  color: #07c160;
}

.dropdown-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
}

.dropdown-arrow.up {
  transform: rotate(180deg);
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  max-height: 300rpx;
  overflow: hidden;
  z-index: 100;
  transform: translateY(-100%);
  opacity: 0;
  transition: all 0.3s ease-out;
  margin-top: -10rpx;
}

.dropdown-menu.show {
  transform: translateY(0);
  opacity: 1;
  padding: 10rpx 0;
}

.dropdown-scroll {
  max-height: 300rpx;
}

.dropdown-item {
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
}

.dropdown-item:not(.selected):active {
  background: #f5f5f5;
}

/* 标签行 */
.tags-row {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.tags-scroll {
  width: 100%;
  white-space: normal;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0;
  gap: 16rpx;
}

.tag-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tag-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 试卷类型标签 */
.exam-type-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.exam-type-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.exam-type-tag {
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  min-width: 100rpx;
  text-align: center;
}

.exam-type-tag.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 试卷列表 */
.exam-list {
  padding: 0 20rpx;
}

.exam-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.exam-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.exam-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.exam-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.exam-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-right: 16rpx;
}

.exam-badges {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.exam-badge {
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.badge-mock {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.badge-real {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.badge-featured {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.exam-info {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
}

.exam-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

.exam-actions {
  display: flex;
  gap: 16rpx;
}

.exam-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  font-size: 28rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.98);
}

.download-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.answer-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 50;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}
