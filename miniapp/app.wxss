/* ÈÄöÁî®ÈÄâÊã©Ê°ÜÊ†∑Âºè */
.picker-content {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  padding: 6rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 10rpx;
  border: 2rpx solid #e8e8e8;
  min-height: 52rpx;
  transition: all 0.3s;
  position: relative;
  z-index: 10;
  min-width: 150rpx;
  width: auto;
  box-sizing: border-box;
}

.picker-content.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.picker-content.active .filter-value,
.picker-content.active .dropdown-arrow {
  color: white;
}

.filter-value {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.filter-value.selected {
  color: #07c160;
}

.picker-content.active .filter-value.selected {
  color: white;
}

.dropdown-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.dropdown-arrow.up {
  transform: rotate(180deg);
}

/* ‰∏ãÊãâËèúÂçïÊ†∑Âºè */
.dropdown-menu {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  max-height: 300rpx;
  overflow: hidden;
  z-index: 100;
  transform: translateY(-100%);
  opacity: 0;
  transition: all 0.3s ease-out;
  margin-top: -10rpx;
}

.dropdown-menu.show {
  transform: translateY(0);
  opacity: 1;
  padding: 10rpx 0;
}

.dropdown-scroll {
  max-height: 300rpx;
}

.dropdown-item {
  padding: 16rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  border-radius: 8rpx;
  margin: 0 10rpx;
  transition: all 0.2s;
  line-height: 1.4;
}

.dropdown-item:active {
  background: #f5f5f5;
}

.dropdown-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
}
