<view class="tab-bar">
  <view
    wx:for="{{list}}"
    wx:key="index"
    class="tab-bar-item"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <image class="tab-icon" src="{{selected === index ? item.selectedIconPath : item.iconPath}}" />
    <text class="tab-text {{selected === index ? 'selected' : ''}}">{{item.text}}</text>
  </view>
</view>
